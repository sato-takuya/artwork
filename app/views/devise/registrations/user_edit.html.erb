<%if user_signed_in? %>

<%= form_for current_user, url: {action: 'user_update'} do |f| %>
<div class='container-fuild form'>
<div class='row'>
<div class='col-md-4'></div>

<div class='col-md-4'>
<div class="field">

<br>
<p class="text-left label">アイコン画像</p>
<div id="img_field" onClick="$('#file').click()" >
<% if current_user.icon_image.present? %>
  <%= image_tag current_user.icon_image.to_s,class:"ex_image" %>
<% else %>
  <i class="fas fa-image"></i><i class="fas fa-file-upload add"></i>
<% end %>
</div>
<%= f.file_field :icon_image,class: "image", style: "display:none;", id: "file" %>



<br>
<p class="text-left label">名前</p>
<%= f.text_field :name,class:"form-control" %>



<br>
<p class="text-left label">URL</p>
<div class="row">
<span class="col-5 col-md-4">fogsound.net/</span><%= f.text_field :nickname,class:"form-control col-7 col-md-8" %>
<br>
<br>
<span class="col-md-12">※ページURLが変わるため、変更は慎重に行ってください。
半角英数字とアンダーバー（_）のみを使うことができます。</span>
</div>



    <br>
<p class="text-left label">カバー写真</p>
    <%= f.file_field :new_top_image,id:"myfile5",class:"form-control" %>





    <br>
<p class="text-left label">公式サイトのURL</p>
    <%= f.text_field :official_url,class:"form-control" %>
    <br>
<p class="text-left label">InstagramのID</p>
    </span><%= f.text_field :instagram_id,class:"form-control" %>

<br>
<p class="text-left label">YoutubeChannelのID</p>
</span><%= f.text_field :youtube_channel,class:"form-control" %>

<br>
<p class="text-left label">紹介</p>
</span><%= f.text_area :info,class:"form-control" , :size => "20x10"%>
<p>活動内容など、より詳しく教えてください。</p>
</div>

<%= f.submit "この内容で登録する",:class=>"btn btn-info btn-lg my-5" %>

<br><br><br>
<%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
</div>




</div><!--中央　終わり-->
<div class='col-md-4'></div>
</div>
</div>
<% end %>

<%end%>