<div class='container-fuild'>
<div class='row'>
<div class='col-md-2'></div>

<div class='artworks col-md-7 col-md-offset-1'>

<h2 class='text-left'>Audio</h2>
<br>

<div class='row'>
  <% @audios.each do |audio| %>
    <a class="audio col-6 col-md-3 audio-modal-open" href="" data-target="<%=audio.audio_public_uid%>">
      <%= image_tag audio.audio_image,class:'audio-image' %>
      <div class='audio-title'>
      <span><%= audio.audio_title %></span><br>
      <%= audio.user.name %>
      </div>
    </a>
    <div class='row'>
    <div id="<%=audio.audio_public_uid%>" class="modal audio-modal">
    <div class="modal__bg audio-modal-close"></div>
    <div class="modal__content col-12 col-md-3">
      <a class="playBtn"><%= image_tag audio.audio_image,class:'audio-show-image' %><i class="select far fa-play-circle" ></i></a>

      <br>
      <%= audio_tag "glowing.mp3",autoplay: false ,controls: false,class:'audio-control',id:'audio1' %>

      <p><span class='audio-show-title'><%= audio.audio_title %></span></p>
      <a class="audio-modal-close" href="">閉じる</a>
    </div>
    </div><!--modal__inner-->
    </div>
  <%end%>
</div>




<% if false %>
<h2 class='text-left'>Video</h2>
<br>
<div class='row'>
<% @videos.each do |video| %>
<%= link_to "#", class: 'video col-6  col-sm-6 col-md-6 col-lg-3' do %>
<%= image_tag video.video_image,class:'video-image' %>
<div class='video-title'>
<span><%= video.title %></span><br>
<%= video.group.name %>
</div>

<%end%>
<%end%>

</div>

<% end %>

</div>
<div class='col-md-2'></div>
</div>
</div>