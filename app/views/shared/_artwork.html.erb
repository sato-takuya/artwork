<div class='container-fuild'>
<div class='row'>
<div class='col-md-2'></div>

<div class='artworks col-md-7 col-md-offset-1'>


<h2 class='text-left title'>Audio</h2>
<br>
<div class='row'>
  <% @audios.each do |audio| %>
  <%= link_to(audio_path(audio), class: 'audio col-6 col-md-3') do %>
    <%if audio.audio_image.attached?%>
    <%= image_tag audio.audio_image.variant(combine_options:{crop:"1000x1000+0+0",gravity: :center}).processed,class:'audio-image' %>
    <%else%>
    <%= image_tag "noimage.png",class:'audio-image' %>
    <%end%>


      <div class='audio-title'>
      <span><%= audio.audio_title %></span><br>
      <%= audio.user.name %>
      </div>

    <%end%>

    <!--モーダルウィンドウ
    <div class='row'>
      <div id="<%=audio.public_uid%>" class="modal audio-modal">
      <div class="modal__bg audio-modal-close"></div>
