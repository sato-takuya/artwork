<%=render "shared/basic"%>
<div class='select-button'>

<div class='button-under'>
<div class='btn-circle-fishy'>


<%= link_to '', "/bandexample",class:"far fa-copy select" %><%#current_user.id が入る btn far fa-copy%>
</div>
</div>

<div class='btn-circle-fishy'>
<%= link_to '', "/bandexample/about",class:"fas fa-user-circle select" %><%#current_user.id が入る btn fas fa-users%>
</div>
</div>


<div class='container-fuild'>
<div class='row'>
<div class='col-md-2'></div>



<div class='artworks col-md-7 col-md-offset-1'>

<h2 class='text-left'>Audio</h2>
<br>
<div class='row'>
<% @audios.each do |audio| %>
<%= link_to "#", class: 'audio col-6  col-sm-6 col-md-6 col-lg-3' do %>
<%= image_tag audio.audio_image,class:'audio-image' %>
<div class='audio-title'>
<span><%= audio.title %></span><br>
<%= audio.group.name %>
</div>
<%end%>
<%end%>
</div>


<h2 class='text-left'>Video</h2>
<br>
<div class='row'>
<% @videos.each do |video| %>
<%= link_to "#", class: 'video col-6  col-sm-6 col-md-6 col-lg-3' do %>
<%= image_tag video.video_image,class:'video-image' %>
<div class='video-title'>
<span><%= video.title %></span><br>
<%= video.group.name %>
</div>
<%end%>
<%end%>
</div>


</div>

<div class='col-md-2'></div>
</div>
</div>